<% let body = "" %>

<%- include("layout.ejs", { body: body }) %>

<h2>Edit Post</h2>
<form action="/posts/<%= post.id %>?_method=PUT" method="POST">
    <input type="text" name="title" value="<%= post.title %>" placeholder="Title" required>
    <textarea name="content" placeholder="Content" required><%= post.content %></textarea>
    <button type="submit">Save Changes</button>
</form>

